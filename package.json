{
  "name": "ecommerce-server",
  "module": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon --exec node index.js",
    "db:create": "psql -U postgres -c \"CREATE DATABASE ecommerce\"",
    "db:schema": "psql -U postgres -d ecommerce -f db/schema.sql",
    "db:seed": "psql -U postgres -d ecommerce -f db/seed.sql",
    "db:reset": "npm run db:schema && npm run db:seed"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.11",
    "@types/pg": "^8.11.11",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.14.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
